@{
    ViewBag.Title = "LichSuDatHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h5><br /><br /><br />Danh sách đặt hàng</h5>
<hr />

<div class="container">

    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home" type="button" role="tab" aria-controls="home" aria-selected="true">Tất cả</button>
        </li>
        <li class="nav-item" role="presentation">
            <button style="color:orange" class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile" type="button" role="tab" aria-controls="profile" aria-selected="false">Chờ xử lý</button>
        </li>
        <li class="nav-item" role="presentation">
            <button style="color:forestgreen" class="nav-link" id="contact-tab" data-bs-toggle="tab" data-bs-target="#contact" type="button" role="tab" aria-controls="contact" aria-selected="false">Đang giao</button>
        </li>
        <li class="nav-item" role="presentation">
            <button style="color:red" class="nav-link" id="huy-tab" data-bs-toggle="tab" data-bs-target="#huy" type="button" role="tab" aria-controls="huy" aria-selected="false">Đã hủy</button>
        </li>
        <li class="nav-item" role="presentation">
            <button style="color:forestgreen" class="nav-link" id="hoantat-tab" data-bs-toggle="tab" data-bs-target="#hoantat" type="button" role="tab" aria-controls="hoantat" aria-selected="false">Hoàn tất</button>
        </li>
    </ul>
    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
            <div class="container-fluid py-4">
                <table class="table table-striped">
                    <thead class="text-white">
                        <tr>
                            <th style="color: black">Ngày đặt</th>
                            <th style="color: black">Sản phẩm</th>
                            <th style="color: black">Số lượng</th>
                            <th style="color: black">Đơn giá</th>
                            <th style="color: black">Thành tiền</th>
                            <th style="color: black">Trạng thái</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@String.Format("{0:dd/MM/yyyy}", @item.donhang.ngayDat)</td>
                                <td>@item.sanpham.tenSP</td>
                                <td>@item.donhangsanpham.soLuong</td>
                                <td>@String.Format("{0:0,0}", @item.donhangsanpham.donGia)₫ </td>
                                <td>@String.Format("{0:0,0}", @item.donhangsanpham.thanhTien)₫ </td>
                                <td>@item.donhang.trangThai</td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
            <div class="container-fluid py-4">
                <table class="table table-striped">
                    <thead class="text-white">
                        <tr>
                            <th style="color: black">Ngày đặt</th>
                            <th style="color: black">Sản phẩm</th>
                            <th style="color: black">Số lượng</th>
                            <th style="color: black">Đơn giá</th>
                            <th style="color: black">Thành tiền</th>
                            <th style="color: black">Trạng thái</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            if (item.donhang.trangThai == "Chờ xử lý")
                            {
                                <tr>
                                    <td>@String.Format("{0:dd/MM/yyyy}", @item.donhang.ngayDat)</td>
                                    <td>@item.sanpham.tenSP</td>
                                    <td>@item.donhangsanpham.soLuong</td>
                                    <td>@String.Format("{0:0,0}", @item.donhangsanpham.donGia)₫ </td>
                                    <td>@String.Format("{0:0,0}", @item.donhangsanpham.thanhTien)₫ </td>
                                    <td>@item.donhang.trangThai</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
            <div class="container-fluid py-4">
                <table class="table table-striped">
                    <thead class="text-white">
                        <tr>
                            <th style="color: black">Ngày đặt</th>
                            <th style="color: black">Sản phẩm</th>
                            <th style="color: black">Số lượng</th>
                            <th style="color: black">Đơn giá</th>
                            <th style="color: black">Thành tiền</th>
                            <th style="color: black">Trạng thái</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            if (item.donhang.trangThai == "Đang giao")
                            {
                                <tr>
                                    <td>@String.Format("{0:dd/MM/yyyy}", @item.donhang.ngayDat)</td>
                                    <td>@item.sanpham.tenSP</td>
                                    <td>@item.donhangsanpham.soLuong</td>
                                    <td>@String.Format("{0:0,0}", @item.donhangsanpham.donGia)₫ </td>
                                    <td>@String.Format("{0:0,0}", @item.donhangsanpham.thanhTien)₫ </td>
                                    <td>@item.donhang.trangThai</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="tab-pane fade" id="huy" role="tabpanel" aria-labelledby="huy-tab">
            <div class="container-fluid py-4">
                <table class="table table-striped">
                    <thead class="text-white">
                        <tr>
                            <th style="color: black">Ngày đặt</th>
                            <th style="color: black">Sản phẩm</th>
                            <th style="color: black">Số lượng</th>
                            <th style="color: black">Đơn giá</th>
                            <th style="color: black">Thành tiền</th>
                            <th style="color: black">Trạng thái</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            if (item.donhang.trangThai == "Đã hủy")
                            {
                                <tr>
                                    <td>@String.Format("{0:dd/MM/yyyy}", @item.donhang.ngayDat)</td>
                                    <td>@item.sanpham.tenSP</td>
                                    <td>@item.donhangsanpham.soLuong</td>
                                    <td>@String.Format("{0:0,0}", @item.donhangsanpham.donGia)₫ </td>
                                    <td>@String.Format("{0:0,0}", @item.donhangsanpham.thanhTien)₫ </td>
                                    <td>@item.donhang.trangThai</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="tab-pane fade" id="hoantat" role="tabpanel" aria-labelledby="hoantat-tab">
            <div class="container-fluid py-4">
                <table class="table table-striped">
                    <thead class="text-white">
                        <tr>
                            <th style="color: black">Ngày đặt</th>
                            <th style="color: black">Sản phẩm</th>
                            <th style="color: black">Số lượng</th>
                            <th style="color: black">Đơn giá</th>
                            <th style="color: black">Thành tiền</th>
                            <th style="color: black">Trạng thái</th>
                            <th style="color: black">Trạng thái</th>
                            <th style="color: black">Đánh giá</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.lstAllhoantat)
                        {
                            <tr>
                                <td>@String.Format("{0:dd/MM/yyyy}", @item.donhang.ngayDat)</td>
                                <td>@item.sanpham.tenSP</td>
                                <td>@item.donhangsanpham.soLuong</td>
                                <td>@String.Format("{0:0,0}", @item.donhangsanpham.donGia)₫ </td>
                                <td>@String.Format("{0:0,0}", @item.donhangsanpham.thanhTien)₫ </td>
                                <td>
                                    @if (@item.donhang.trangThai == "Đã giao")
                                    {
                                        <p>Đã giao</p>
                                    }
                                    else
                                    {
                                        <p>Chưa giao</p>
                                    }
                                </td>
                                <td>
                                    @if (@item.donhang.daThanhToan == true)
                                    {
                                        <p>Đã thanh toán</p>
                                    }
                                    else
                                    {
                                        <p>Chưa thanh toán</p>
                                    }
                                </td>
                                <td>
                                    @if (@item.donhangsanpham.danhGia != null)
                                    {
                                        <div>
                                            @for (int i = 0; i < @item.donhangsanpham.danhGia; i++)
                                            {
                                                <svg xmlns="http://www.w3.org/2000/svg" style="color:orange" width="16" height="16" fill="currentColor" class="bi bi-star-fill" viewBox="0 0 16 16">
                                                    <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z" />
                                                </svg>
                                            }
                                            @for (int i = 0; i < 5 - @item.donhangsanpham.danhGia; i++)
                                            {
                                                <svg xmlns="http://www.w3.org/2000/svg" style="color:black; opacity:20%" width="16" height="16" fill="currentColor" class="bi bi-star-fill" viewBox="0 0 16 16">
                                                    <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z" />
                                                </svg>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <!-- Button trigger modal -->
                                        <button type="button" class="btn btn-outline-warning" data-bs-toggle="modal" data-bs-target="#exampleModal">
                                            Đánh giá sản phẩm
                                        </button>
                                        <!-- Modal -->
                                        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="exampleModalLabel">Đánh giá sản phẩm</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                    </div>
                                                    @using (Html.BeginForm("danhGia", "GioHang", FormMethod.Get)) // -- phần thay đổi
                                                    {
                                                        <div class="modal-body">
                                                            <div>
                                                                <div>
                                                                    <h6>ID Sản phẩm</h6>
                                                                    @Html.Editor("idSP", new { htmlAttributes = new { @class = "form-control me-2" } })
                                                                    <br />
                                                                    <h6>ID Đơn hàng</h6>
                                                                    @Html.Editor("idDH", new { htmlAttributes = new { @class = "form-control me-2" } })
                                                                    <br />
                                                                    <h6>Đánh giá số sao</h6>
                                                                    @Html.Editor("sao", new { htmlAttributes = new { @class = "form-control me-2" } })
                                                                    <h6>Đánh giá</h6>
                                                                    <textarea class="form-control me-2" placeholder="Đánh giá"></textarea>
                                                                    <br />

                                                                </div>

                                                            </div>
                                                        </div>

                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                            <input type="submit" class="btn btn-primary" value="Đánh giá" />
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        </div>

                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    locationbox__overlay {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        z-index: 12;
        background: rgba(0,0,0,.75);
        display: none;
        margin: auto;
    }
</style>

