@model TECHNOLOGY_SHOP.Models.tb_SanPham

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h4>
    Thông tin sản phẩm - @Html.DisplayFor(model => model.tenSP) <br />

</h4>
<h5>
    @for (int i = 0; i < Model.danhGia; i++)
    {
        <svg xmlns="http://www.w3.org/2000/svg" style="color:orange" width="16" height="16" fill="currentColor" class="bi bi-star-fill" viewBox="0 0 16 16">
            <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z" />
        </svg>
    }
    (@Model.soNguoiDanhGia người đánh giá)
</h5>
<br />
<div class="container">
    <div id="carouselExampleDark" class="carousel carousel-dark slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="2" aria-label="Slide 3"></button>
            <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="3" aria-label="Slide 4"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active" data-bs-interval="10000">
                <div class="row justify-content-md-center">
                    <div class="col-md-auto">
                        <img src="@Html.DisplayFor(model => model.h1)" alt="hinh thmbnail" style="width: 716px; height: 400px" />
                    </div>
                </div>
            </div>
            <div class="carousel-item" data-bs-interval="2000">
                <div class="row justify-content-md-center">
                    <div class="col-md-auto">
                        <img src="@Html.DisplayFor(model => model.h2)" alt="hinh thmbnail" style="width: 716px; height: 400px" />
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <div class="row justify-content-md-center">
                    <div class="col-md-auto">
                        <img src="@Html.DisplayFor(model => model.h3)" alt="hinh thmbnail" style="width: 716px; height: 400px" />
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <div class="row justify-content-md-center">
                    <div class="col-md-auto">
                        <img src="@Html.DisplayFor(model => model.h4)" alt="hinh thmbnail" style="width: 716px; height: 400px" />
                    </div>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>

<br />
<br />

<div class="container">
    <div class="row">
        <div class="col-6 col-md-4">
            <div style="margin: 20px">
                <br />
                <img src="@Html.DisplayFor(model => model.hinh)" alt="hinh thmbnail" style="width: 400px; height: 400px" />
            </div>
        </div>
        <div class="col-6 col-md-2">
            <div>
                <h4>Sản phẩm</h4>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        <label>Hãng sản phẩm</label>
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.tb_HangSanPham.tenHang)
                    </dd>
                    <dt>Loại sản phẩm</dt>
                    <dd>@Html.DisplayFor(model => model.tb_LoaiSanPham.tenLoaiSP)</dd>

                    <dt>Trạng thái</dt>
                    <dd>@String.Format("{0}", Model.trangThai)</dd>

                    <dt>Giá bán</dt>
                    <dd>@String.Format("{0:0,0}", Model.giaBan)₫</dd>

                    <dt>Số lượng tồn</dt>
                    <dd>@Html.DisplayFor(model => model.soLuongTon)</dd>

                    <dt>Ngày cập nhật</dt>
                    <dd>@String.Format("{0:M/d/yyyy}", Model.ngayCapNhat)</dd>

                </dl>
            </div>
        </div>
        <div class="col-6 col-md-4">
            <div style="margin-left:3rem">
                <h4>Mô tả</h4>
                <hr />
                <dl class="dl-horizontal">
                    <dd style="width: 400px; text-align: justify">@Html.DisplayFor(model => model.moTa)</dd>
                </dl>

                <dl>
                    <dd>

                        <div style="width: 400px; text-align: justify" role="alert">
                            <h4>Chính sách của của hàng</h4>
                            <hr />
                        </div>

                        <div style="width: 400px; text-align: justify">
                            <svg style="color:blue" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-currency-exchange" viewBox="0 0 16 16">
                                <path d="M0 5a5.002 5.002 0 0 0 4.027 4.905 6.46 6.46 0 0 1 .544-2.073C3.695 7.536 3.132 6.864 3 5.91h-.5v-.426h.466V5.05c0-.046 0-.093.004-.135H2.5v-.427h.511C3.236 3.24 4.213 2.5 5.681 2.5c.316 0 .59.031.819.085v.733a3.46 3.46 0 0 0-.815-.082c-.919 0-1.538.466-1.734 1.252h1.917v.427h-1.98c-.003.046-.003.097-.003.147v.422h1.983v.427H3.93c.118.602.468 1.03 1.005 1.229a6.5 6.5 0 0 1 4.97-3.113A5.002 5.002 0 0 0 0 5zm16 5.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0zm-7.75 1.322c.069.835.746 1.485 1.964 1.562V14h.54v-.62c1.259-.086 1.996-.74 1.996-1.69 0-.865-.563-1.31-1.57-1.54l-.426-.1V8.374c.54.06.884.347.966.745h.948c-.07-.804-.779-1.433-1.914-1.502V7h-.54v.629c-1.076.103-1.808.732-1.808 1.622 0 .787.544 1.288 1.45 1.493l.358.085v1.78c-.554-.08-.92-.376-1.003-.787H8.25zm1.96-1.895c-.532-.12-.82-.364-.82-.732 0-.41.311-.719.824-.809v1.54h-.005zm.622 1.044c.645.145.943.38.943.796 0 .474-.37.8-1.02.86v-1.674l.077.018z" />
                            </svg>
                            Hư gì đổi nấy 12 tháng tại 3091 siêu thị toàn quốc (miễn phí tháng đầu)
                        </div>
                        <div style="width: 400px; text-align: justify">
                            <svg style="color:blue" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-shield-check" viewBox="0 0 16 16">
                                <path d="M5.338 1.59a61.44 61.44 0 0 0-2.837.856.481.481 0 0 0-.328.39c-.554 4.157.726 7.19 2.253 9.188a10.725 10.725 0 0 0 2.287 2.233c.346.244.652.42.893.533.12.057.218.095.293.118a.55.55 0 0 0 .101.025.615.615 0 0 0 .1-.025c.076-.023.174-.061.294-.118.24-.113.547-.29.893-.533a10.726 10.726 0 0 0 2.287-2.233c1.527-1.997 2.807-5.031 2.253-9.188a.48.48 0 0 0-.328-.39c-.651-.213-1.75-.56-2.837-.855C9.552 1.29 8.531 1.067 8 1.067c-.53 0-1.552.223-2.662.524zM5.072.56C6.157.265 7.31 0 8 0s1.843.265 2.928.56c1.11.3 2.229.655 2.887.87a1.54 1.54 0 0 1 1.044 1.262c.596 4.477-.787 7.795-2.465 9.99a11.775 11.775 0 0 1-2.517 2.453 7.159 7.159 0 0 1-1.048.625c-.28.132-.581.24-.829.24s-.548-.108-.829-.24a7.158 7.158 0 0 1-1.048-.625 11.777 11.777 0 0 1-2.517-2.453C1.928 10.487.545 7.169 1.141 2.692A1.54 1.54 0 0 1 2.185 1.43 62.456 62.456 0 0 1 5.072.56z" />
                                <path d="M10.854 5.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 1 1 .708-.708L7.5 7.793l2.646-2.647a.5.5 0 0 1 .708 0z" />
                            </svg>
                            Bảo hành chính hãng điện thoại 1 năm tại các trung tâm bảo hành hãng
                        </div>
                        <div style="width: 400px; text-align: justify">
                            <svg style="color:blue" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box2-heart" viewBox="0 0 16 16">
                                <path d="M8 7.982C9.664 6.309 13.825 9.236 8 13 2.175 9.236 6.336 6.31 8 7.982Z" />
                                <path d="M3.75 0a1 1 0 0 0-.8.4L.1 4.2a.5.5 0 0 0-.1.3V15a1 1 0 0 0 1 1h14a1 1 0 0 0 1-1V4.5a.5.5 0 0 0-.1-.3L13.05.4a1 1 0 0 0-.8-.4h-8.5Zm0 1H7.5v3h-6l2.25-3ZM8.5 4V1h3.75l2.25 3h-6ZM15 5v10H1V5h14Z" />
                            </svg>
                            Bộ sản phẩm gồm: Hộp, Sách hướng dẫn, Bút cảm ứng, Cây lấy sim, Cáp Type C
                            <hr />
                        </div>
                        
                    </dd>
                </dl>
                
                <div style="width: 400px; text-align: justify" class="d-grid gap-2 col-8 mx-auto">

                    @if (Model.trangThai == false)
                    {
                        <h5 style="color:red; text-align:center">Ngừng kinh doanh</h5>
                    }
                    else
                    {
                        if (Model.soLuongTon > 0)
                        {
                            <h6 style="color:red; text-align:center">Còn hàng</h6>
                            <a href="@Url.Action("ThemGioHang", "GioHang",new { @id = Model.idSP, @strURL = Request.Url.ToString() })" class="btn btn-outline-warning">Đặt mua</a>
                            <h6 style="text-align:center">Gọi đặt mua 1800.1060 (7:30 - 22:00)</h6>
                        }
                        else
                        {
                            <h6 style="color:red; text-align:center">Hết hàng</h6>
                            <a href="@Url.Action("ThemGioHang", "GioHang",new { @id = Model.idSP, @strURL = Request.Url.ToString() })" aria-disabled="true" class="btn btn-outline-warning disabled">Đặt mua</a>
                            <h6 style="text-align:center">Gọi đặt trước 1800.1060 (7:30 - 22:00)</h6>
                        }
                    }

                </div>

            </div>
        </div>
    </div>
</div>

