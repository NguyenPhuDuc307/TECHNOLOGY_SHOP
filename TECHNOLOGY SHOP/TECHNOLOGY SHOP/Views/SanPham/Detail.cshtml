@model TECHNOLOGY_SHOP.Models.tb_SanPham

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h4>
    Thông tin sản phẩm - @Html.DisplayFor(model => model.tenSP) <br />
    
</h4>
<h5>
    @for (int i = 0; i < Model.danhGia; i++)
    {
        <svg xmlns="http://www.w3.org/2000/svg" style="color:orange" width="16" height="16" fill="currentColor" class="bi bi-star-fill" viewBox="0 0 16 16">
            <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z" />
        </svg>
    }
    (@Model.soNguoiDanhGia người đánh giá)
</h5>
<br />
<div class="container">
    <div id="carouselExampleDark" class="carousel carousel-dark slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="2" aria-label="Slide 3"></button>
            <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="3" aria-label="Slide 4"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active" data-bs-interval="10000">
                <div class="row justify-content-md-center">
                    <div class="col-md-auto">
                        <img src="@Html.DisplayFor(model => model.h1)" alt="hinh thmbnail" style="width: 716px; height: 400px" />
                    </div>
                </div>
            </div>
            <div class="carousel-item" data-bs-interval="2000">
                <div class="row justify-content-md-center">
                    <div class="col-md-auto">
                        <img src="@Html.DisplayFor(model => model.h2)" alt="hinh thmbnail" style="width: 716px; height: 400px" />
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <div class="row justify-content-md-center">
                    <div class="col-md-auto">
                        <img src="@Html.DisplayFor(model => model.h3)" alt="hinh thmbnail" style="width: 716px; height: 400px" />
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <div class="row justify-content-md-center">
                    <div class="col-md-auto">
                        <img src="@Html.DisplayFor(model => model.h4)" alt="hinh thmbnail" style="width: 716px; height: 400px" />
                    </div>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>

<br />
<br />

<div class="container">
    <div class="row">
        <div class="col-6 col-md-4">
            <div style="margin: 20px">
                <br />
                <img src="@Html.DisplayFor(model => model.hinh)" alt="hinh thmbnail" style="width: 400px; height: 400px" />
            </div>
        </div>
        <div class="col-6 col-md-2">
            <div>
                <h4>Sản phẩm</h4>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        <label>Hãng sản phẩm</label>
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.tb_HangSanPham.tenHang)
                    </dd>
                    <dt>Loại sản phẩm</dt>
                    <dd>@Html.DisplayFor(model => model.tb_LoaiSanPham.tenLoaiSP)</dd>

                    <dt>Trạng thái</dt>
                    <dd>@String.Format("{0}", Model.trangThai)</dd>

                    <dt>Giá bán</dt>
                    <dd>@String.Format("{0:0,0}", Model.giaBan)₫</dd>

                    <dt>Số lượng tồn</dt>
                    <dd>@Html.DisplayFor(model => model.soLuongTon)</dd>

                    <dt>Ngày cập nhật</dt>
                    <dd>@String.Format("{0:M/d/yyyy}", Model.ngayCapNhat)</dd>

                </dl>
            </div>
        </div>
        <div class="col-6 col-md-4">
            <div style="margin-left:3rem">
                <h4>Mô tả</h4>
                <hr />
                <dl class="dl-horizontal">
                    <dd style="width: 400px; text-align: justify">@Html.DisplayFor(model => model.moTa)</dd>
                </dl>
                <div class="d-grid gap-2 col-6 mx-auto">
                    <a href="@Url.Action("ThemGioHang", "GioHang",new { @id = Model.idSP, @strURL = Request.Url.ToString() })" class="btn btn-outline-warning">Đặt mua</a>
                </div>
                <div class="block__promo">

                    <div class="card">
                        <div class="card-header">
                            Khuyến mãi
                        </div>
                        <div class="card-body">
                            <blockquote class="blockquote mb-0">
                                <p>Giá và khuyến mãi dự kiến áp dụng đến 23:00 04/04</p>
                                <footer class="blockquote-footer">Nhập mã DMX100 giảm 3% tối đa 100,000đ khi thanh toán quét QRcode qua App của ngân hàng.<cite title="Source Title">Source Title</cite></footer>
                            </blockquote>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

